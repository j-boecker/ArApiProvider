@page
@model ArApiProvider.Pages.RoomPlansModel

@{
    ViewData["Title"] = "Room Plans";
}

<h4>RoomPlan</h4>
<div class="row">
    @foreach (var room in Model.RoomPlanList)
    {
        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/lib/arlogo.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@(room.Name)</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@(room.Height)</li>
                    <li class="list-group-item">@(room.Width)</li>
                    <li class="list-group-item">Vestibulum at eros</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
            <br/>
        </div>
    }
</div>
